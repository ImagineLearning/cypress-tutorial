{
	"name": "cypress-tutorial",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"start": "craco start",
		"build": "craco build",
		"test": "craco test",
		"e2e": "ELECTRON_EXTRA_LAUNCH_ARGS=\"--force-device-scale-factor=1\" npx cypress open",
		"e2e:ci": "npx cypress run"
	},
	"dependencies": {
		"@craco/craco": "^5.9.0",
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.1.0",
		"@testing-library/user-event": "^12.1.10",
		"@types/jest": "^26.0.15",
		"@types/node": "^12.0.0",
		"@types/react": "^16.9.53",
		"@types/react-dom": "^16.9.8",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-scripts": "4.0.1",
		"react-table": "^7.6.2",
		"typescript": "^4.0.3",
		"web-vitals": "^0.2.4"
	},
	"devDependencies": {
		"@types/cypress-image-snapshot": "^3.1.2",
		"@types/react-table": "^7.0.25",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"autoprefixer": "^9.8.6",
		"cypress": "^6.0.1",
		"cypress-image-snapshot": "^4.0.0",
		"eslint": "^7.14.0",
		"eslint-loader": "^4.0.2",
		"postcss": "^7.0.35",
		"tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.1"
	},
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"react-app",
			"react-app/jest"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"overrides": [
			{
				"files": [
					"cypress/**/*"
				],
				"rules": {
					"jest": "off",
					"jest/expect-expect": "off",
					"jest/valid-expect-in-promise": "off",
					"jest/valid-expect": "off"
				}
			}
		],
		"rules": {
			"no-restricted-imports": [
				"error",
				"rxjs/Rx"
			],
			"@typescript-eslint/explicit-module-boundary-types": "off"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
